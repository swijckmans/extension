{
  "manifest_version": 2,
  "name": "c/side ScriptDraft",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "storage",
    "webNavigation",
    "tabs"
  ],
  "browser_action": {
    "default_title": "c/side ScriptDraft",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.ts"],
    "persistent": true
  },
  "icons": {
    "512": "icon-512.png"
  }
}